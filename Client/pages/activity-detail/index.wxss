/* pages/activity-detail/index.wxss */
.activity-detail-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx; /* 为底部操作栏留出空间 */
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
  color: #999;
}

/* 错误状态 */
.error-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
}

.error-content {
  text-align: center;
  padding: 40rpx;
}

.error-text {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 40rpx;
  display: block;
}

.retry-btn {
  width: 200rpx;
}

/* 活动内容 */
.activity-content {
  background-color: #fff;
}

/* 主图 */
.main-image-container {
  width: 100%;
  position: relative;
}

.main-image {
  width: 100%;
  display: block;
}

/* 活动信息 */
.activity-info {
  padding: 32rpx;
}

/* 标题部分 */
.title-section {
  margin-bottom: 32rpx;
}

.activity-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  word-break: break-word;
}

/* 时间信息 */
.time-section {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.time-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.time-item:last-child {
  margin-bottom: 0;
}

.time-label {
  font-size: 28rpx;
  color: #666;
  min-width: 140rpx;
}

.time-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 描述部分 */
.description-section {
  margin-top: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.description-content {
  background-color: #f8f9fa;
  padding: 24rpx;
  border-radius: 12rpx;
}

.description-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
  word-break: break-word;
}

/* 图片部分 */
.images-section {
  margin-top: 40rpx;
}

.images-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 24rpx;
}

.image-item {
  flex: 0 0 220rpx;
  height: 220rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.detail-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 24rpx 32rpx;
  border-top: 2rpx solid #eee;
  display: flex;
  gap: 24rpx;
  z-index: 100;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
}

/* 响应式调整 */
@media (max-width: 400px) {
  .activity-info {
    padding: 24rpx;
  }
  
  .activity-title {
    font-size: 32rpx;
  }
  
  .section-title {
    font-size: 28rpx;
  }
  
  .description-text {
    font-size: 26rpx;
  }
  
  .time-label,
  .time-value {
    font-size: 26rpx;
  }
  
  .image-item {
    flex: 0 0 200rpx;
    height: 200rpx;
  }
}

/* 图片加载状态 */
.t-image {
  background-color: #f0f0f0;
}

/* 分割线样式调整 */
.t-divider {
  margin: 32rpx 0;
}