/* 主容器 */
.farm-details {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 暂停营业时的灰色样式 */
.farm-details.suspended {
  background-color: #f0f0f0;
}

.farm-details.suspended .farm-container {
  filter: grayscale(50%);
  opacity: 0.8;
}

/* 暂停营业提示 */
.suspension-notice {
  background-color: #ff4d4f;
  color: white;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.notice-text {
  font-size: 28rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 200rpx 0;
  color: #999;
  font-size: 32rpx;
}

/* 农场容器 */
.farm-container {
  background-color: white;
}

/* 农场头部 */
.farm-header {
  background-color: white;
  padding: 30rpx;
}

/* 农场信息栏（Logo + 名称 + 关注按钮） */
.farm-info-bar {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
}

/* 小Logo容器（左侧） */
.logo-container-small {
  flex-shrink: 0;
  margin-right: 20rpx;
}

.farm-logo-small {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  border: 2rpx solid #4CAF50;
}

/* Logo占位符 */
.logo-placeholder {
  width: 80rpx;
  height: 80rpx;
  background-color: #4CAF50;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.logo-text {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

/* 农场名称（中间） */
.farm-name-center {
  flex: 1;
  text-align: center;
  padding: 0 20rpx;
}

.farm-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  line-height: 1.3;
}

/* 关注按钮（右侧） */
.follow-button {
  background-color: #FF6B35;
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 25rpx;
  flex-shrink: 0;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 53, 0.3);
  transition: all 0.3s ease;
  min-width: 120rpx;
  text-align: center;
}

.follow-button:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(255, 107, 53, 0.5);
}

/* 已关注状态的按钮样式 */
.follow-button.followed {
  background-color: #f0f0f0;
  color: #666;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid #ddd;
}

.follow-button.followed:active {
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 加载状态的按钮样式 */
.follow-button.loading {
  opacity: 0.7;
  pointer-events: none;
}

.follow-text {
  font-size: 28rpx;
  font-weight: bold;
  color: inherit;
}

/* 轮播图容器 */
.swiper-container {
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.farm-swiper {
  width: 100%;
  height: 100%;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

/* 农场信息 */
.farm-info {
  background-color: white;
  padding: 30rpx;
  margin-top: 20rpx;
}

.info-item {
  display: flex;
  margin-bottom: 25rpx;
  align-items: flex-start;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666;
  width: 180rpx;
  flex-shrink: 0;
  font-weight: 500;
}

.value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  line-height: 1.4;
}

/* 选项卡按钮 */
.tab-buttons {
  display: flex;
  background-color: white;
  margin-top: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.tab-button {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 30rpx;
  color: #666;
  border-bottom: 4rpx solid transparent;
  transition: all 0.3s ease;
}

.tab-button.active {
  color: #4CAF50;
  border-bottom-color: #4CAF50;
  font-weight: bold;
}

/* 内容区域 */
.tab-content {
  background-color: white;
  min-height: 400rpx;
}

/* 农场信息内容 */
.info-content {
  padding: 30rpx;
}

.info-desc {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
}

/* 商品内容 */
.products-content {
  padding: 20rpx;
}

.loading-products {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 商品列表 */
.products-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.product-item {
  display: flex;
  background-color: #fafafa;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s ease;
}

.product-item:active {
  transform: scale(0.98);
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.product-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 15rpx;
}

.product-price {
  display: flex;
  align-items: baseline;
  color: #ff4d4f;
}

.price-symbol {
  font-size: 24rpx;
  margin-right: 4rpx;
}

.price-value {
  font-size: 36rpx;
  font-weight: bold;
}

.price-unit {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
}

/* 暂停营业时的商品样式 */
.farm-details.suspended .product-item {
  background-color: #f5f5f5;
  opacity: 0.7;
}

.farm-details.suspended .product-name,
.farm-details.suspended .product-desc {
  color: #999;
}

.farm-details.suspended .product-price {
  color: #ccc;
}

/* 暂停营业时的关注按钮样式 */
.farm-details.suspended .follow-button {
  background-color: #ccc;
  box-shadow: none;
}

.farm-details.suspended .follow-button:active {
  transform: none;
}