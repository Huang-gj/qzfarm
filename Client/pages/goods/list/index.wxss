page {
  background-color: #fff;
}

.goods-list-container {
  display: block;
  transform: translateZ(0);
  -webkit-transform: translateZ(0);
  backface-visibility: hidden;
  perspective: 1000;
}

.goods-list-container .t-search {
  padding: 0 30rpx;
  background-color: #fff;
}

.goods-list-container .t-class__input-container {
  height: 64rpx !important;
  border-radius: 32rpx !important;
}

.goods-list-container .t-search__left-icon {
  display: flex;
  align-items: center;
}

.goods-list-container .t-search__input {
  font-size: 28rpx !important;
  color: rgb(116, 116, 116) !important;
}

.goods-list-container .category-goods-list {
  background-color: #f2f2f2;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
  padding: 20rpx 24rpx;
  -webkit-overflow-scrolling: touch;
}

.goods-list-container .wr-goods-list {
  background: #f2f2f2 !important;
}

.goods-list-container .t-image__mask {
  display: flex !important;
}

.goods-list-container .empty-wrap {
  margin-top: 184rpx;
  margin-bottom: 120rpx;
  height: 300rpx;
}

.goods-list-container .empty-wrap .empty-tips .empty-content .content-text {
  margin-top: 40rpx;
}

.goods-list-container .price-container {
  padding: 30rpx 30rpx 0 30rpx;
  width: 600rpx;
  background-color: #fff;
  border-radius: 16rpx 0 0 16rpx;
  box-sizing: border-box;
  margin-bottom: 100rpx;
}

.goods-list-container .price-between {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
}

.goods-list-container .price-ipts-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 60rpx;
}

.goods-list-container .price-divided {
  width: 20rpx;
  text-align: center;
  color: #333;
  font-size: 26rpx;
}

.goods-list-container .price-input-box {
  position: relative;
  width: 240rpx;
  height: 76rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
}

.goods-list-container .price-ipt {
  flex: 1;
  height: 100%;
  padding: 0 10rpx !important;
  background-color: transparent !important;
  border: none !important;
}

.goods-list-container .price-unit {
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: #999;
}

.goods-list-container .filter-tags {
  position: fixed;
  left: 0;
  top: 88rpx;
  z-index: 90;
  width: 100%;
  padding: 10rpx 24rpx;
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.goods-list-container .filter-tag {
  display: inline-flex;
  align-items: center;
  height: 56rpx;
  padding: 0 20rpx;
  margin: 10rpx;
  background-color: #f5f5f5;
  border-radius: 28rpx;
  font-size: 24rpx;
  color: #333;
}

.goods-list-container .clear-tag {
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #999;
}

.goods-list-container .loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

/* 添加渐变过渡效果 */
.goods-item {
  transition: opacity 0.2s ease;
}

.t-popup__content {
  position: relative !important;
  min-height: 450rpx !important;
}

.t-popup__close {
  top: 16rpx !important;
}

.t-popup .t-popup__footer {
  position: absolute !important;
  bottom: 0 !important;
  left: 0 !important;
  width: 100% !important;
  padding: 24rpx 32rpx !important;
  background-color: #fff !important;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05) !important;
}

.filter-popup {
  overflow: visible;
}

.filter-popup .popup-bottom {
  margin-top: 60rpx !important;
}

.goods-list-container .t-input {
  background-color: transparent !important;
}

.goods-list-container .t-input__control {
  font-size: 26rpx !important;
}

/* 覆盖filter-popup组件样式 */
.goods-list-container .wr-filter-popup .wr-popup-header {
  padding-top: 48rpx !important;
}

.goods-list-container .wr-filter-popup .wr-popup-content {
  padding-bottom: 0 !important;
}

.goods-list-container .wr-filter-popup .wr-popup-footer {
  margin-top: 160rpx !important;
  padding: 20rpx 30rpx 30rpx 30rpx !important;
  position: relative;
  z-index: 100;
}

/* 直接调整底部按钮的绝对位置 */
.goods-list-container .wr-filter-popup .bottom-btns,
.goods-list-container .wr-popup .wr-bottom-button {
  position: absolute !important;
  bottom: 50rpx !important;
  left: 30rpx !important;
  right: 30rpx !important;
  width: calc(100% - 60rpx) !important;
}

/* 确保按钮区域有足够的高度和间距 */
.goods-list-container .wr-filter-popup .bottom-btns {
  height: 100rpx !important;
  display: flex !important;
  justify-content: space-between !important;
  align-items: center !important;
}

/* 设置按钮样式 */
.goods-list-container .wr-filter-popup .btn,
.goods-list-container .wr-popup .btn {
  height: 88rpx !important;
  line-height: 88rpx !important;
  border-radius: 44rpx !important;
  font-size: 30rpx !important;
  font-weight: 500 !important;
}

/* 新增包装容器样式 */
.price-container-wrapper {
  padding: 40rpx 30rpx;
  width: 600rpx;
  background-color: #fff;
  border-radius: 16rpx 0 0 16rpx;
  box-sizing: border-box;
  min-height: 450rpx;
}

.price-header {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
}

.price-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.price-spacer {
  height: 180rpx;
}

/* 优化弹窗样式 */
.goods-list-container .wr-popup {
  display: flex;
  flex-direction: column;
}

/* 添加价格提示文本样式 */
.price-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  text-align: center;
}
