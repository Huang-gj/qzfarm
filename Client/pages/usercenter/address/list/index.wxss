/* eslint-disable no-param-reassign */
.address-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.address-list {
  background-color: #fff;
}

.no-address {
  padding-top: 200rpx;
}

.bottom-fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 24rpx 32rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.btn-wrap {
  display: flex;
  gap: 24rpx;
}

.address-btn {
  flex: 1;
  height: 88rpx;
  background-color: #0052d9;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
}

.address-btn.btn-default {
  background-color: #c5c5c5;
  color: #999;
}

.footer {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  margin-top: 16rpx;
}

.custom-class {
  margin-right: 8rpx;
}

/* 选择按钮样式 */
.select-btn-container {
  padding: 0 32rpx 24rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.select-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 0;
  border-radius: 8rpx;
  background-color: #f8f8f8;
  transition: all 0.3s ease;
}

.select-btn.selected {
  background-color: #e6f3ff;
}

.select-text {
  margin-left: 12rpx;
  font-size: 28rpx;
  color: #666;
}

.select-btn.selected .select-text {
  color: #0052d9;
  font-weight: 500;
}
