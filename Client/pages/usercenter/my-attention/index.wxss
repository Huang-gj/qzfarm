/* 主容器 */
.my-attention-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.empty-tip {
  margin-top: 20rpx;
  color: #999;
  font-size: 28rpx;
}

/* 农场列表 */
.farm-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 农场项目 */
.farm-item {
  display: flex;
  align-items: center;
  background-color: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.farm-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 农场图片 */
.farm-image-container {
  flex-shrink: 0;
  margin-right: 24rpx;
}

.farm-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  border: 2rpx solid #4CAF50;
}

.farm-image-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background-color: #4CAF50;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-text {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

/* 农场信息 */
.farm-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.farm-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.3;
}

/* 箭头图标 */
.arrow-icon {
  flex-shrink: 0;
  margin-left: 16rpx;
}

.arrow {
  font-size: 32rpx;
  color: #ccc;
  font-weight: bold;
}

/* 下拉刷新样式 */
.my-attention-container {
  padding-top: 0;
}

.my-attention-container .farm-list {
  padding-top: 20rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .farm-item {
    padding: 20rpx;
  }
  
  .farm-image {
    width: 100rpx;
    height: 100rpx;
  }
  
  .farm-name {
    font-size: 30rpx;
  }
  
  .farm-desc {
    font-size: 24rpx;
  }
}